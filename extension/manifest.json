{
  "manifest_version": 2,
  "name": "Bandwidth Hero",
  "description": "Saves bandwidth by compressing images on the page.",
  "version": "0.1",
  "icons": {
    "64": "res/images/icon-64.png",
    "128": "res/images/icon-128.png",
    "256": "res/images/icon-256.png"
  },
  "browser_action": {
    "default_icon": "res/images/icon-128.png",
    "default_title": "Saves bandwidth!"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "src/content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "background": {
    "scripts": [
      "src/background.js"
    ]
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "tabs",
    "<all_urls>"
  ],
  "content_security_policy": "image-src https://bandwidth-hero.s3.amazonaws.com; default-src 'self'",
  "web_accessible_resources": [
    "res/images/placeholder.png"
  ]
}
